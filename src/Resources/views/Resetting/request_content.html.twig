{% trans_default_domain 'FOSUserBundle' %}

{% if invalid_username is defined %}
    <div class="alert alert-dark">
        {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}
    </div>
{% endif %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="post">
    <div class="form-group">
        <input class="form-control input-lg" type="text" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans }}"/>
    </div>

    <div class="form-group">
        <input class="btn btn-primary btn-block btn-lg btn-flat" type="submit" name="submit" value="{{ 'resetting.request.submit'|trans }}" />
    </div>
</form>